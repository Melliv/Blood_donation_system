@model WebApp.ViewModels.Contact.DetailsViewModel;

<h1>@Resources.Views.Shared._Layout.Delete</h1>

<h3>@Resources.Views.Shared._Layout.DeleteConfirm</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contact.ContactValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contact.ContactValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contact.ContactType!.ContactTypeValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contact.ContactType!.ContactTypeValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contact.Person!.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contact.Person!.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="@Resources.Views.Shared._Layout.Delete" asp-route-id="@Model.Contact.Id" asp-route-personId="@Model.Contact.PersonId" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-personId="@Model.Contact.PersonId" >@Resources.Views.Shared._Layout.BacktoList</a>
    </form>
</div>
