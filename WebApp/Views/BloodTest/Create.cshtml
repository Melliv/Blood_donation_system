@model WebApp.ViewModels.BloodTest.CreateViewModel;

<h1>@Resources.Views.Shared._Layout.Create</h1>

<h4>@Resources.DTO.App.V1.Overall.BloodTest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BloodTest.DonorId" class="control-label">@Html.DisplayNameFor(model => model.BloodTest.DonorId)</label>
                <select asp-for="BloodTest.DonorId" class="form-control" asp-items="Model.Patients">
                    <option></option>
                </select>
                <span asp-validation-for="BloodTest.DonorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodTest.DoctorId" class="control-label">@Html.DisplayNameFor(model => model.BloodTest.DoctorId)</label>
                <select asp-for="BloodTest.DoctorId" class="form-control" asp-items="Model.Doctors">
                    <option></option>
                </select>
                <span asp-validation-for="BloodTest.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodTest.BloodGroupId" class="control-label">@Html.DisplayNameFor(model => model.BloodTest.BloodGroup)</label>
                <select asp-for="BloodTest.BloodGroupId" class="form-control" asp-items="Model.BloodGroups">
                    <option></option>
                </select>
                <span asp-validation-for="BloodTest.BloodGroupId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BloodTest.Allowed" />@Html.DisplayNameFor(model => model.BloodTest.Allowed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BloodTest.Comments" class="control-label"></label>
                <textarea asp-for="BloodTest.Comments" class="form-control" rows="5"></textarea>
                <span asp-validation-for="BloodTest.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared._Layout.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Shared._Layout.BacktoList</a>
</div>