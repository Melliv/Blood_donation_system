@model WebApp.ViewModels.BloodTransfusion.DetailsViewModel;

<h1>@Resources.Views.Shared._Layout.Details</h1>

<div>
    <h4>@Resources.DTO.App.V1.Overall.BloodTransfusion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.BloodGroup!.BloodGroupValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.BloodGroup!.BloodGroupValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.Donor!)
        </dt>
        <dd class="col-sm-10">
            <a asp-area="" asp-controller="Persons" asp-route-id="@Model.BloodTransfusions.DonorId" >
                @Html.DisplayFor(model => model.BloodTransfusions.Donor!.FullName) 
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.Doctor!)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.Doctor!.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.Comments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.Comments)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.CreatedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.CreatedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.CreateAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.CreateAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.UpdateBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.UpdateBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTransfusions.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BloodTransfusions.UpdatedAt)
        </dd>
    </dl>
</div>

<h2>@Resources.DTO.App.V1.Overall.BloodToUse</h2>
<table class="table">
    <thead>
    <tr>
        <th>
            @Resources.Views.Shared._Layout.Blood
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransferableBlood.FirstOrDefault()!.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransferableBlood.FirstOrDefault()!.BloodDonate!.Donor)
            @Html.DisplayNameFor(model => model.TransferableBlood.FirstOrDefault()!.BloodDonate!.Donor!.FullName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.TransferableBlood)
    {
        <tr>
            <td>
                <a asp-controller="BloodDonate" asp-action="Details"  asp-route-id="@item!.BloodDonateId">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-droplet-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 16a6 6 0 0 0 6-6c0-1.655-1.122-2.904-2.432-4.362C10.254 4.176 8.75 2.503 8 0c0 0-6 5.686-6 10a6 6 0 0 0 6 6zM6.646 4.646c-.376.377-1.272 1.489-2.093 3.13l.894.448c.78-1.559 1.616-2.58 1.907-2.87l-.708-.708z"/>
                    </svg>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.BloodDonate!.Donor!.FullName)
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Index">@Resources.Views.Shared._Layout.BacktoList</a>
</div>
