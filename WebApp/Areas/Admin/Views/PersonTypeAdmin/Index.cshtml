@model WebApp.ViewModels.PersonType.IndexViewModel

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes.First()!.PersonTypeValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes.First()!.SecondaryPersonTypeValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes.First()!.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes.First()!.CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes.First()!.UpdateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes.First()!.UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PersonTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item!.PersonTypeValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.SecondaryPersonTypeValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.CreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.UpdateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.UpdatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item!.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item!.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item!.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
